
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String       @id @unique @default(uuid())
  name        String       @db.VarChar(255)
  priority    PriorityType @default(NORMAL)
  creatdAt    DateTime     @default(now())
  deadline    DateTime
  duration    String
  status      StatusType   @default(IN_PROGRESS)
  assignedId  String       @unique
  done        Boolean      @default(false)
  delayed     Boolean      @default(false)
  escalatorId String
  assigned_to Actor        @relation(fields: [assignedId], references: [id])
  escalator   Escalator    @relation(fields: [escalatorId], references: [id])
}

model Actor {
  id        String     @id @unique @default(uuid())
  name      String     @db.VarChar(255)
  email     String     @unique
  phone     String     @unique
  escalator Escalator?
  tasks     Task?
}

model Escalator {
  id          String @id @unique @default(uuid())
  name        String @db.VarChar(255)
  phone       String @unique
  email       String @unique
  assignedId  String @unique
  assigned_to Actor  @relation(fields: [assignedId], references: [id])
  tasks       Task[]
}

enum PriorityType {
  LOW
  NORMAL
  HIGH
}

enum StatusType {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

