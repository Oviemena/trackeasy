generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String       @id @unique @default(uuid())
  name        String       @db.VarChar(255)
  priority    PriorityType @default(NORMAL)
  creatdAt    DateTime     @default(now())
  deadline    DateTime
  duration    String
  status      StatusType   @default(IN_PROGRESS)
  done        Boolean      @default(false)
  delayed     Boolean      @default(false)
  assignedId String 
  assigned_to Actor @relation(fields: [assignedId], references: [id])
  escalator   Escalator @relation(fields: [escalatorId], references: [id])  
  escalatorId String  
}

model Actor {
  id        String     @id @unique @default(uuid())
  name      String     @db.VarChar(255)
  email     String     
  phone     String     
  tasks Task[]
}

model Escalator {
  id          String @id @unique @default(uuid())
  name        String @db.VarChar(255)
  phone       String 
  email       String 
  tasks      Task[]
}

enum PriorityType {
  LOW
  NORMAL
  HIGH
}

enum StatusType {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

