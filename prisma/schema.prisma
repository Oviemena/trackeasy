generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String       @db.VarChar(255) @unique
  priority    PriorityType @default(NORMAL)
  createdAt    DateTime     @default(now()) 
  deadline    DateTime
  duration    String
  status      StatusType   @default(NOT_STARTED)
  done        Boolean      @default(false)
  delayed     Boolean      @default(false)
  assigned_to Actor[]
  escalator   Escalator[]
}

model Actor {
  id        Int      @id @default(autoincrement())
  name      String     @db.VarChar(255)
  email     String    
  phone String 
  taskIds Int
  tasks Task @relation(fields: [taskIds], references: [id])
}

model Escalator {
  id          Int      @id @default(autoincrement())
  name        String @db.VarChar(255)
  email String
  phone       String 
  taskIds Int
  tasks Task @relation(fields: [taskIds], references: [id])
}

enum PriorityType {
  LOW
  NORMAL
  HIGH
}

enum StatusType {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

